<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLevelDelivery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/restIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/restName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pt_sans_web_bold"
        android:maxWidth="450px"
        android:text="Restaurant Name"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/restIcon"
        app:layout_constraintTop_toTopOf="@+id/restIcon" />

    <TextView
        android:id="@+id/orderBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/restName"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/text_border"
        android:fontFamily="@font/pt_sans_web_bold"
        android:text="Order By:"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/orderByTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delivTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/text_border"
        android:fontFamily="@font/pt_sans_web_bold"
        android:text="Delivery Time:"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/deliveryTimeTxt"
        app:layout_constraintTop_toBottomOf="@+id/orderBy" />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/text_centered_border"
        android:fontFamily="@font/pt_sans_web_bold"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:text="ORDER STATUS HERE"
        android:textColor="@color/colorWhiteText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restIcon" />

    <TextView
        android:id="@+id/deliveryTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pt_sans_web_bold"
        android:text="Delivery Time:"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/restIcon"
        app:layout_constraintTop_toBottomOf="@+id/orderByTxt" />

    <TextView
        android:id="@+id/orderByTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/pt_sans_web_bold"
        android:text="Order By:"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/restIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderStatus" />

</android.support.constraint.ConstraintLayout>